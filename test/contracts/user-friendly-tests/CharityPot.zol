pragma solidity ^0.8.0;

import "./Escrow-imports/IERC20.sol";

contract CharityPot {

    secret mapping(address => uint256) public balances;
    secret uint256 private pot;
    IERC20 public erc20;
    address public admin;

    constructor (address _admin, address _erc20) {
        erc20 = IERC20(_erc20);
        admin = _admin;
    }

    function deposit(uint256 amount) public {
        bool hasBalance = erc20.transferFrom(msg.sender, address(this), amount);
        require(hasBalance == true);
        balances[msg.sender] += amount;
    }

    function donate(secret uint256 donation) public {
        balances[msg.sender] -= donation;
        unknown pot += donation;
    }

    function withdraw(secret uint256 withdrawal) public {
        require(msg.sender == admin);
        pot -= withdrawal;
        balances[msg.sender] += withdrawal;
    }
}
